<div id="loginPrevio" class="mx-3 mb-3 mt-3 rounded-4 bg-secondary bg-opacity-10 p-2">
    <h1 class="text-primary display-5 fw-bold mx-3">Login de Usuario</h1>
    <div class="mx-3">
        <label class="form-label fst-italic fw-bold">Ingrese su Nombre</label>
        <input type="text" id="inputLogIn" class="form-control" placeholder="Nombre"> 
        <p class="mx-3 fw-bold text-danger mb-0" id="mensajeErrorLogIn"></p>   
    </div>
    <button class="btn btn-success mx-3 mt-3 mb-3" id="enviarLogIn">Enviar!</button>
</div>
<div id="loginPosterio" class="mx-3 mb-3 mt-3 rounded-4 bg-success bg-opacity-25 p-2">
    <div class="d-flex justify-content-between">
        <h1 id="logueoOk" class="text-success display-5 fw-bold mx-3"></h1>
        <button class="btn btn-warning mx-3 mt-3 mb-3" id="desloguear">Desloguear</button>        
    </div>
</div>