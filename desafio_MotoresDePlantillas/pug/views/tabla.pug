extends layouts/main-layout.pug

block content
    h1(class="display-5 fw-bold") Vista de productos (usando Handlebars)
    div 
        if listExist
            table(class="table table-dark table-striped")
                thead
                    th ID
                    th Title
                    th Price
                    th Imagen
                tbody
                    each item in listExist
                        tr(class="table-dark")
                            td(class="table-dark")= item.id
                            td(class="table-dark")= item.title
                            td(class="table-dark")= item.price
                            td(class="table-dark")
                                img(src=item.thumbnail height="48px")
        else
            h2(class="fw-bold") No hay productos
    a(class="btn btn-secondary mx-3" href='../') Ir al formulario de carga