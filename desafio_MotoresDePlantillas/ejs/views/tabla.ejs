<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
</head>
<body>
    <h1 class="display-5 fw-bold"><%=titleTag%></h1>
    <div>
        <% if (listExist.length) { %>
            <table class="table table-dark table-striped">
                <thead >
                    <th>ID</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Imagen</th>
                </thead>
                <tbody>
                    <% listExist.forEach(function(producto) { %>
                        <tr class="table-dark">
                            <td class="table-dark"><%= producto.id %></td>
                            <td class="table-dark"><%= producto.title %></td>
                            <td class="table-dark"><%= producto.price %></td>
                            <td class="table-dark">
                                <img src='<%= producto.thumbnail %>' height="48px">    
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <h2 class="fw-bold mb-3">No hay productos</h2>
        <% } %>
    </div>
    <a class="btn btn-secondary mb-3 ms-3" href='<%=btnPath%>'><%=btnFrase%></a> 
</body>
</html>