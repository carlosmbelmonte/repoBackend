    <div>
        <h1 class="display-5 fw-bold mx-3">Productos Disponibles</h1>
        <div class="mx-3"> 
            <table id="tablaProducto" class="table table-dark table-striped">
                <thead >
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Imagen</th>
                    <th></th>
                </thead>
                <tbody id="lista">

                </tbody>
            </table>
        </div>        
    </div>
    <div>
        <button class="btn btn-warning mx-3 mt-3 mb-3" id="crearcarrito">Crear Carrito</button> 

        <div id="carritoPrevio" class="container" style="display: none;">
            <div class="row">
                <div class="col">
                    <h2 class="fw-bold" id="nroIDCarrito"></h2>
                    <div id="objectosenCarrito"></div>                    
                </div>
